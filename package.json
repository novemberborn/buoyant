{
  "name": "buoyant",
  "version": "0.2.0",
  "description": "Framework for implementing servers using the Raft Consensus Algorithm",
  "keywords": [
    "raft",
    "consensus"
  ],
  "author": "Mark Wubben (https://novemberborn.net/)",
  "repository": {
    "type": "git",
    "url": "https://github.com/novemberborn/buoyant"
  },
  "homepage": "https://github.com/novemberborn/buoyant",
  "bugs": "https://github.com/novemberborn/buoyant/issues",
  "license": "ISC",
  "engines": {
    "node": ">=6.2.2"
  },
  "main": "main.js",
  "files": [
    "main.js",
    "main.js.map",
    "lib",
    "src"
  ],
  "scripts": {
    "clean": "rimraf main.js main.js.map lib",
    "prebuild": "npm run clean",
    "build": "babel src --out-dir ./ --source-maps",
    "prepublish": "npm run build",
    "example": "node bin/example.js",
    "lint": "as-i-preach",
    "test": "mocha",
    "posttest": "npm run lint",
    "precoverage": "rimraf coverage",
    "coverage": "npm run build -- --plugins __coverage__ && nyc npm test"
  },
  "devDependencies": {
    "@novemberborn/as-i-preach": "^3.1.1",
    "babel-cli": "^6.10.1",
    "babel-core": "^6.9.1",
    "babel-plugin-__coverage__": "^11.0.0",
    "babel-plugin-espower": "^2.3.1",
    "babel-plugin-transform-async-to-generator": "^6.8.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.10.3",
    "babel-plugin-transform-strict-mode": "^6.8.0",
    "chalk": "^1.1.3",
    "lolex": "^1.5.0",
    "mocha": "^2.5.3",
    "nyc": "^6.6.1",
    "pirates": "^2.1.1",
    "power-assert": "^1.4.1",
    "proxyquire": "^1.7.9",
    "rimraf": "^2.5.2",
    "sinon": "^1.17.4",
    "source-map-support": "^0.4.0"
  },
  "babel": {
    "comments": false,
    "compact": false,
    "plugins": [
      "transform-es2015-modules-commonjs",
      "transform-strict-mode"
    ]
  },
  "nyc": {
    "instrument": false,
    "reporter": [
      "lcov",
      "html",
      "text"
    ],
    "sourceMap": false
  }
}
