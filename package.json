{
  "name": "buoyant",
  "version": "0.3.0",
  "description": "Framework for implementing servers using the Raft Consensus Algorithm",
  "keywords": [
    "raft",
    "consensus"
  ],
  "author": "Mark Wubben (https://novemberborn.net/)",
  "repository": {
    "type": "git",
    "url": "https://github.com/novemberborn/buoyant"
  },
  "homepage": "https://github.com/novemberborn/buoyant",
  "bugs": "https://github.com/novemberborn/buoyant/issues",
  "license": "ISC",
  "engines": {
    "node": ">=6.2.2"
  },
  "main": "dist/lib/main.js",
  "files": [
    "dist/lib",
    "src/lib"
  ],
  "scripts": {
    "prepublish": "npm run build",
    "clean": "rimraf dist coverage",
    "prebuild": "npm run clean",
    "build": "babel src --out-dir dist --source-maps",
    "precoverage": "npm run clean",
    "coverage": "npm run build -- --plugins __coverage__ && nyc npm test",
    "example": "node scripts/example.js",
    "fuzz": "node scripts/run.js",
    "lint": "as-i-preach",
    "test": "ava",
    "posttest": "npm run lint",
    "watch:build": "npm run build -- --watch",
    "watch:test": "npm run test -- --watch"
  },
  "devDependencies": {
    "@novemberborn/as-i-preach": "^6.0.0",
    "ava": "^0.16.0",
    "babel-cli": "^6.10.1",
    "babel-core": "^6.9.1",
    "babel-plugin-__coverage__": "^11.0.0",
    "babel-plugin-module-map": "^1.0.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.10.3",
    "babel-plugin-transform-strict-mode": "^6.8.0",
    "chalk": "^1.1.3",
    "es6-error": "^4.0.0",
    "lolex": "^1.5.0",
    "metasyntactic-variables": "^1.0.0",
    "nyc": "^8.3.2",
    "pirates": "^2.1.1",
    "proxyquire": "^1.7.9",
    "rimraf": "^2.5.2",
    "sinon": "^1.17.4",
    "source-map-support": "^0.4.0"
  },
  "ava": {
    "babel": {
      "plugins": [
        [
          "babel-plugin-module-map",
          {
            "dist": "./dist"
          }
        ],
        "transform-async-to-generator",
        "transform-es2015-modules-commonjs",
        "transform-strict-mode"
      ]
    },
    "files": "test/**/*.js",
    "source": [
      "package.json",
      "dist/lib/**/*.js"
    ]
  },
  "babel": {
    "comments": false,
    "compact": false,
    "plugins": [
      "transform-async-to-generator",
      "transform-es2015-modules-commonjs",
      "transform-strict-mode"
    ]
  },
  "nyc": {
    "instrument": false,
    "reporter": [
      "lcov",
      "html",
      "text"
    ],
    "sourceMap": false
  }
}
