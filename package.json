{
  "name": "buoyant",
  "version": "0.2.0",
  "description": "Framework for implementing servers using the Raft Consensus Algorithm",
  "keywords": [
    "raft",
    "consensus"
  ],
  "author": "Mark Wubben (https://novemberborn.net/)",
  "repository": {
    "type": "git",
    "url": "https://github.com/novemberborn/buoyant"
  },
  "homepage": "https://github.com/novemberborn/buoyant",
  "bugs": "https://github.com/novemberborn/buoyant/issues",
  "license": "ISC",
  "engines": {
    "node": ">=6.2.2"
  },
  "main": "dist/main.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "babel src --out-dir dist --source-maps",
    "prepublish": "npm run build",
    "example": "node bin/example.js",
    "lint": "as-i-preach",
    "test": "ava",
    "posttest": "npm run lint",
    "precoverage": "rimraf coverage",
    "coverage": "npm run build -- --plugins __coverage__ && nyc npm test"
  },
  "devDependencies": {
    "@novemberborn/as-i-preach": "^3.1.1",
    "ava": "^0.15.2",
    "babel-cli": "^6.10.1",
    "babel-core": "^6.9.1",
    "babel-plugin-__coverage__": "^11.0.0",
    "babel-plugin-module-map": "^1.0.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.10.3",
    "babel-plugin-transform-strict-mode": "^6.8.0",
    "chalk": "^1.1.3",
    "lolex": "^1.5.0",
    "nyc": "^6.6.1",
    "pirates": "^2.1.1",
    "proxyquire": "^1.7.9",
    "rimraf": "^2.5.2",
    "sinon": "^1.17.4",
    "source-map-support": "^0.4.0"
  },
  "ava": {
    "babel": {
      "plugins": [
        ["babel-plugin-module-map", { "dist": "./dist" }],
        "transform-async-to-generator",
        "transform-es2015-modules-commonjs",
        "transform-strict-mode"
      ]
    },
    "files": "test/*.js",
    "source": [
      "package.json",
      "dist/**/*.js"
    ]
  },
  "babel": {
    "comments": false,
    "compact": false,
    "plugins": [
      "transform-es2015-modules-commonjs",
      "transform-strict-mode"
    ]
  },
  "nyc": {
    "instrument": false,
    "reporter": [
      "lcov",
      "html",
      "text"
    ],
    "sourceMap": false
  }
}
